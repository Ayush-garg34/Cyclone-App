<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Survial">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:textSize="18dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="#ffffff"
                android:textColor="#000000"
                android:text="SAFETY GUIDE"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:background="#000000"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:text="When a cyclone warning is issued, depending on official advice provided by your local authorities as the event evolves, the following actions may be warranted :"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:background="#BBBBBB"
                android:textColor="#000000"
                android:textSize="18dp"
                android:text="If requested by local authorities, collect children from school or childcare centre and go home."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:textColor="#000000"
                android:textSize="18dp"
                android:text="Park vehicles under solid shelter (hand brake on and in gear)."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:background="#BBBBBB"
                android:textColor="#000000"
                android:textSize="18dp"
                android:text="Put wooden or plastic outdoor furniture in your pool or inside with other loose items."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:textColor="#000000"
                android:textSize="18dp"
                android:text="Close shutters or board-up or heavily tape all windows. Draw curtains and lock doors."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:background="#BBBBBB"
                android:textColor="#000000"
                android:textSize="18dp"
                android:text="Pack an evacuation kit of warm clothes, essential medications, baby formula, nappies, valuables, important papers, photos and mementos in waterproof bags to be taken with your emergency kit. Large/heavy valuables could be protected in a strong cupboard.
Remain indoors (with your pets)."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:textColor="#000000"
                android:textSize="18dp"
                android:text="Stay tuned to your local radio/TV for further information."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:background="#000000"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:text="On warning of local evacuation :"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:background="#BBBBBB"
                android:textColor="#000000"
                android:textSize="18dp"
                android:text="Based on predicted wind speeds and storm surge heights, evacuation may be necessary."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"

                android:textSize="18dp"
                android:text="Official advice will be given on local radio/TV regarding safe routes and when to move."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:background="#BBBBBB"
                android:textColor="#000000"
                android:textSize="18dp"
                android:text="Wear strong shoes (not thongs) and tough clothing for protection."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:textColor="#000000"
                android:textSize="18dp"
                android:text="Lock doors; turn off power, gas, and water; take your evacuation and emergency kits."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:background="#BBBBBB"
                android:textColor="#000000"
                android:textSize="18dp"
                android:text="If evacuating inland (out of town), take pets and leave early to avoid heavy traffic, flooding and wind hazards."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:textColor="#000000"
                android:textSize="18dp"
                android:text="If evacuating to a public shelter or higher location, follow police and State/Territory Emergency Services directions."/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:background="#BBBBBB"
                android:textColor="#000000"
                android:textSize="18dp"
                android:text="If going to a public shelter, take bedding needs and books or games for children."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:textColor="#000000"
                android:textSize="18dp"
                android:text="Leave pets protected and with food and water."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:background="#000000"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:text="When the cyclone strikes :"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:background="#BBBBBB"
                android:textColor="#000000"
                android:textSize="18dp"
                android:text="Disconnect all electrical appliances. Listen to your battery radio for updates."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:textColor="#000000"
                android:textSize="18dp"
                android:text="Stay inside and shelter {well clear of windows) in the strongest part of the building,
i.e. cellar, internal hallway or bathroom."/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:background="#BBBBBB"
                android:textColor="#000000"
                android:textSize="18dp"
                android:text=" Keep evacuation and emergency kits with you."/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:textColor="#000000"
                android:textSize="18dp"
                android:text="If the building starts to break up, protect yourself with mattresses, rugs or blankets under a
strong table or bench or hold onto a solid fixture, e.g. a water pipe."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:background="#BBBBBB"
                android:textColor="#000000"
                android:textSize="18dp"
                android:text="Beware the calm 'eye'. If the wind drops, don't assume the cyclone is over; violent winds
will soon resume from another direction."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:textColor="#000000"
                android:textSize="18dp"
                android:text=" Wait for the official 'all clear'."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:background="#BBBBBB"
                android:textColor="#000000"
                android:textSize="18dp"
                android:text="If driving, stop (handbrake on and in gear) - but well away from the sea and clear of trees,
power lines and streams. Stay in the vehicle."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:textColor="#000000"
                android:textSize="18dp"
                android:text="  "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:background="#000000"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:text="After the cyclone :"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:background="#BBBBBB"
                android:textColor="#000000"
                android:textSize="18dp"
                android:text="Don't go outside until officially advised it is safe."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:textColor="#000000"
                android:textSize="18dp"
                android:text="Check for gas leaks. Don't use electric appliances if wet."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:background="#BBBBBB"
                android:textColor="#000000"
                android:textSize="18dp"
                android:text="Listen to local radio for official warnings and advice."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:textColor="#000000"
                android:textSize="18dp"
                android:text="If you have to evacuate, or did so earlier, don't return until advised. Use a recommended route and don't rush."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:background="#BBBBBB"
                android:textColor="#000000"
                android:textSize="18dp"
                android:text="Beware of damaged power lines, bridges, buildings, trees, and don't enter floodwaters."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:textColor="#000000"
                android:textSize="18dp"
                android:text="Heed all warnings and don't go sightseeing. Check/help neighbours instead.
Don't make unnecessary telephone calls."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:background="#BBBBBB"
                android:textColor="#000000"
                android:textSize="18dp"
                android:text="Check/help neighbours instead. Don't make unnecessary telephone calls."/>

        </LinearLayout>



    </ScrollView>

</android.support.constraint.ConstraintLayout>